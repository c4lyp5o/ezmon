{
	"name": "ezmon",
	"version": "1.0.0",
	"module": "./src/server.js",
	"private": true,
	"scripts": {
		"install:client": "cd client && bun install",
		"install:server": "bun install",
		"install:all": "npm run install:server && npm run install:client",
		"dev:client": "cd client && bun dev",
		"dev:server": "bun --env-file .env --watch src/server.js",
		"dev:worker": "bun --watch src/worker.js",
		"dev": "conc -n \"CLIENT,API,WORKER\" -c \"cyan,magenta,yellow\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:worker\"",
		"build-client": "cd client && bun run build",
		"build:all": "npm run build-client",
		"start": "pm2-runtime start ecosystem.config.js --env production",
		"stop": "pm2 stop all",
		"restart": "pm2 restart all",
		"logs": "pm2 monit"
	},
	"dependencies": {
		"@elysiajs/openapi": "^1.4.11",
		"@elysiajs/static": "^1.4.6",
		"cron": "^4.3.3",
		"deadslog": "^1.2.2",
		"elysia": "^1.4.15",
		"mongoose": "^8.19.2"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"concurrently": "^9.2.1"
	}
}
